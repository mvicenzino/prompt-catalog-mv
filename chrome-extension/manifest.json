{
  "manifest_version": 3,
  "name": "PromptPal - Prompt Capture",
  "version": "1.0.0",
  "description": "Capture and save prompts from ChatGPT, Claude, and other AI tools to your PromptPal library",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:*/*",
    "https://*.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content-chatgpt.js"],
      "css": ["content.css"]
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["content-claude.js"],
      "css": ["content.css"]
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content-x.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
